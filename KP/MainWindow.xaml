<Window x:Class="KP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP"
        mc:Ignorable="d"
        Title="Autorization" Height="450" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Margin="15" >
                <TextBlock Text="Введите Логин" FontSize="15"/>
                <TextBox Name="LoginTextBox" FontSize="15"/>
            </StackPanel>
            <StackPanel Margin="15">
                <TextBlock Text="Введите пароль" FontSize="15"/>
                <TextBox Name="PasswordTextBox" FontSize="15"/>
            </StackPanel>
            <StackPanel Margin="15" >
                <Button Content="Войти" Margin="5" Height="30" FontSize="15" Click="Loggin_Button"/>
                <Button Content="Войти как гость" Margin="5" Height="30" FontSize="15" Click="Guest_Button"/>
            </StackPanel>
        </StackPanel>
        <StackPanel>
            <Button Content="Выйти" Margin="200,10,0,0" Height="25" Width="40" Click="ExitButton_Click" RenderTransformOrigin="-1.323,1.25" />
        </StackPanel>
    </Grid>
</Window>
